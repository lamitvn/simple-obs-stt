{
  "name": "simple_obs_stt",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "watch-html": "cpx \"src/**/*.html\" assets --watch",
    "build-html": "cpx \"src/**/*.html\" assets",
    "watch-css": "postcss src/css/style.css -o assets/css/style.css -w",
    "build-css": "cross-env ENV_BUILD=prod postcss src/css/style.css -o assets/css/style.css",
    "watch-js": "esbuild src/server/index.ts src/client/index.ts --bundle --sourcemap=inline --target=es2016 --outdir=assets/ --watch",
    "debug-js": "esbuild src/server/index.ts src/client/index.ts --bundle --sourcemap=inline --target=es2016 --outdir=assets/ --servedir=assets",
    "build-js": "esbuild src/server/index.ts src/client/index.ts --bundle --minify --target=es2016 --outdir=assets/",
    "start": "concurrently \"npm:watch-html\" \"npm:watch-css\" \"npm:watch-js\"",
    "dev": "concurrently \"npm:watch-html\" \"npm:watch-css\" \"npm:debug-js\"",
    "build": "concurrently \"npm:build-html\" \"npm:build-js\""
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "alpinejs": "^2.8.2",
    "daisyui": "^0.20.1",
    "peerjs": "^1.3.2",
    "tailwindcss": "^2.1.2"
  },
  "devDependencies": {
    "autoprefixer": "^10.2.5",
    "concurrently": "^6.0.2",
    "cpx": "^1.5.0",
    "cross-env": "^7.0.3",
    "esbuild": "^0.11.14",
    "postcss": "^8.2.12",
    "postcss-cli": "^8.3.1",
    "postcss-copy": "^7.1.0",
    "postcss-import": "^14.0.1",
    "typescript": "^4.2.4"
  }
}
